<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="rviz"  default="true"/>
  <!-- marker detector -->
  <!--<node pkg="aruco_ros" type="single"  name="aruco_single">
      <remap from="/camera_info"       to="/xtion/rgb/camera_info" />
      <remap from="/image"             to="/xtion/rgb/image_rect_color" />
      <param name="image_is_rectified" value="True"/>
      <param name="marker_size"        value="0.045"/>
      <param name="marker_id"          value="582"/>
      <param name="reference_frame"    value="/base_footprint"/>
      <param name="camera_frame"       value="xtion_rgb_optical_frame"/>
      <param name="marker_frame"       value="aruco_frame" />
      <param name="corner_refinement"  value="SUBPIX" />
  </node>-->

  <!-- Load definition of pregrasp motion into play_motion namespace -->
  <rosparam command="load" file="$(find gb_tiago_manipulation_demo)/config/pick_motions.yaml" /> 
  <param name="/use_sim_time" value="true" />
  <!-- Pick & place server -->
  <node name="pick_and_place_server" pkg="gb_tiago_manipulation_demo" type="octomap_pick_and_place_server.py" output="screen">
      <rosparam command="load" file="$(find gb_tiago_manipulation_demo)/config/pick_and_place_params.yaml" />
      <param name="object_width"  value="0.09"  />
      <param name="object_height" value="0.09" />
      <param name="object_depth"  value="0.115"  />
  </node>

  <!-- Node exposing service to start looking for the object and trigger the picking -->
  <node name="pick_client" pkg="gb_tiago_manipulation_demo" type="pick_client_mesh.py" output="screen"/>  

  <group if="$(arg rviz)">
      <node name="pick_demo_rviz" pkg="rviz" type="rviz" args="-d $(find gb_tiago_manipulation_demo)/config/rviz/tiago_pick_demo.rviz" />
  </group>

  <node pkg="topic_tools" type="throttle" name="throttle_node" args="messages /xtion/depth_registered/points 3 /throttle_filtering_points/filtered_points" />

</launch>
